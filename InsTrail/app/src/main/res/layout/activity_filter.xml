<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#B3000000"
    android:id="@+id/filter_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioFilter"
                android:background="#ffffff"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioNo"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:text="@string/radio_nofilter"/>

                <RadioButton
                    android:id="@+id/radioTop"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:text="@string/radio_top" />

                <RadioButton
                    android:id="@+id/radioLow"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:text="@string/radio_low" />

                <RadioButton
                    android:id="@+id/radioMyPic"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:text="@string/radio_mypic" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>